<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="203dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/img2"
        android:id="@+id/img1"/>


    <TextView
        android:id="@+id/txtCanal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sintonizanos la proxima semana"
        android:textColor="#436eed"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/txtLegendCanal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Canal 5"
        android:textAlignment="textEnd"
        android:layout_below="@+id/txtCanal"
        android:layout_toStartOf="@+id/img1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#E91E63"
        android:textColor="#FFF"
        android:layout_above="@+id/txtCanal"
        android:background="@drawable/redondo"
        />

    <EditText
        android:id="@+id/etCanal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/btnChange"
        android:layout_above="@+id/txtCanal"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_alignBottom="@+id/btnChange"
        android:layout_alignTop="@+id/btnChange"
        />

    <Spinner
        android:id="@+id/mySpinner"
        android:entries="@array/programas"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>