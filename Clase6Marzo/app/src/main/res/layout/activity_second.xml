  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#e2e8f0"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_editor_absoluteX="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/juego" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toEndOf="@id/imageView"
        android:text="Nombre del Juego"
        android:textColor="#3f3f46"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtConsole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitle"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/imageView"
        android:text="Consola"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitle"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:text="130.00 MXN"
        android:textColor="#0f172a"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtClasification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtConsole"
        android:layout_alignLeft="@+id/txtConsole"
        android:layout_marginTop="8dp"
        android:text="ESRB"
        android:textColor="@color/primary"
        android:textSize="11dp" />

    <Button
        android:id="@+id/btnBuy"
        android:layout_width="110dp"
        android:layout_height="42dp"
        android:layout_below="@id/txtPrice"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/primary"
        android:text="Comprar" />
  </RelativeLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>